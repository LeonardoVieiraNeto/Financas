@model IList<Financas.Entidades.Movimentacao>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />
@Html.ActionLink("Nova movimentação", "Form")

<br />
<br />

<table class="table table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Usuario</th>
      <th>Valor</th>
      <th>Tipo</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var m in Model)
    {
      <tr>
        <td>@m.Id</td>
        <td>@m.Usuario.Nome</td>
        <td>@m.Valor</td>
        <td>@m.Tipo</td>
      </tr>
    }
  </tbody>
</table>